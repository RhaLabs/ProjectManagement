    </div>
    {% endif %}
    {% if showTemplate is defined %}
    <div class="col-lg-6">
        <p><strong>Template Code</strong></p>
        <pre class="prettyprint">{{ twigSource(showTemplate) }}</pre>
    </div>
    {% endif %}
</div>
{% endif %}
#}

{% endblock content_row %}

{% block footer %}
    <p>&copy; <a href="{{ path('homepage') }}" target="_blank">Raymond Harris Architects</a> 2014-{{ "now"|date("Y") }}</p>
{% endblock footer %}

{% block foot_script %}
{{ parent() }}
    
    {% javascripts
      
      '@ApplicationGlobalBundle/Resources/public/js/offcanvas.js'
    %}
      <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock foot_script %}
