{% block body_text %}
{% autoescape false %}
{{ body_message }}
<table style='margin-top:10px;border-collapse:collapse;border-spacing:2px;border-color:gray;border-style:solid;border-width:2px'>
  <thead>
    <tr>
      <th style="border-collapse:collapse;border-spacing:1px;border-color:gray;border-style:solid;border-width:1px;width:24px">Store Number</th>
      <th style="border-collapse:collapse;border-spacing:1px;border-color:gray;border-style:solid;border-width:1px;width:128px">Name</th>
      <th style="border-collapse:collapse;border-spacing:1px;border-color:gray;border-style:solid;border-width:1px;width:48px">PWO Date</th>
      <th style="border-collapse:collapse;border-spacing:1px;border-color:gray;border-style:solid;border-width:1px;width:24px">Store Type</th>
    </tr>
  </thead>
  <tbody>
    {% for store in result %}
    <tr style='border-collapse:collapse;border-spacing:1px;border-color:gray;border-style:solid;border-width:1px'>
      <td style="border-collapse:collapse;border-spacing:1px;border-color:gray;border-style:solid;border-width:1px;width:{{ store.number|length * 12 }}px">{{ store.number }}</td>
      <td style="border-collapse:collapse;border-spacing:1px;border-color:gray;border-style:solid;border-width:1px;width:{{ store.canonicalName|length * 12 }}px">{{ store.canonicalName }}</td>
      <td style="border-collapse:collapse;border-spacing:1px;border-color:gray;border-style:solid;border-width:1px;width:{{ store.pwoPrj|date|length * 12 }}px">{{ store.pwoPrj|date('m/d/Y') }}</td>
      <td style="border-collapse:collapse;border-spacing:1px;border-color:gray;border-style:solid;border-width:1px;width:{{ store.type|length * 12 }}px">{{ store.type }}</td>
    </tr>
    {% endfor %}
  </tbody>
</table>


Your Friendly RHA Robot
{% endautoescape %}
{% endblock %}
